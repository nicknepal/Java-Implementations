        android:layout_height="73dp"
        android:layout_marginTop="12dp"
        android:background="#2e2e2e"
        android:text="5"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/button13"
